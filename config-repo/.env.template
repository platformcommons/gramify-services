# Environment Variables Template for Gramify Services
# Copy this file to .env and update with actual values

# Database Configuration
COMMONS_DB_USERNAME=root
COMMONS_DB_PASSWORD=your_db_password
COMMONS_DB_URL=localhost
COMMONS_DB_PORT=3306
COMMONS_DB_DRIVER=mysql
COMMONS_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver

# External Services
COMMONS_SOLR_URL=http://localhost:8983/solr
COMMONS_ELASTIC_SEARCH_URL=localhost:9200
COMMONS_ELASTIC_SEARCH_USER=elastic
COMMONS_ELASTIC_SEARCH_PASSWORD=your_elastic_password

# Service Discovery
COMMONS_EUREKA_CLIENT_ENABLED=true
COMMONS_SERVICE_DISCOVERY_URL=http://localhost:8761/service-discovery/eureka/

# Kafka Configuration
COMMONS_KAFKA_ENABLED=true
COMMONS_KAFKA_URL=localhost:29092
COMMONS_SCHEMA_REGISTRY_URL=http://127.0.0.1:8081

# Cache Configuration
COMMONS_CACHE_ENABLED=true
COMMONS_CACHE_CLIENT_URL=localhost:10800
COMMONS_CACHE_APPKEY=your_cache_appkey

# Authentication
COMMONS_TLD_AUTH_ENABLED=true
COMMONS_KEY_CLOAK_ENABLED=false
COMMONS_MS_AUTH_ENABLED=true
COMMONS_API_KEY_AUTH_ENABLED=true

# API Keys and Secrets
COMMONS_API_KEY=your_api_key
COMMONS_ENCRYPTION_KEY=your_encryption_key
COMMONS_CM_ADMIN_APPKEY=your_cm_admin_appkey

# AWS S3 Configuration
COMMONS_S3_ACCESS_KEY=your_s3_access_key
COMMONS_S3_SECRET_KEY=your_s3_secret_key
COMMONS_S3_REGION=ap-south-1
COMMONS_S3_PRIVATE_BUCKET_NAME=your_private_bucket
COMMONS_S3_PUBLIC_BUCKET_NAME=your_public_bucket

# CMS Configuration
COMMONS_CMS_URL=your_cms_url
COMMONS_CMS_USER_NAME=admin
COMMONS_CMS_PASSWORD=your_cms_password
COMMONS_CMS_DATA_URL=your_cms_data_url

# Service URLs
COMMONS_IAM_BASE_URL=http://localhost:9000
COMMONS_MS_BASE_URL=http://localhost:8080/gateway
COMMONS_REPORT_SERVICE_CONTEXT_PATH=/commons-report-service

# Application Settings
COMMONS_LIQUIBASE_ENABLED=true
COMMONS_DDL_AUTO=none